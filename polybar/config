[colors]
background = #500d0d0d
background-alt = #300fdfdfd
foreground = #dfdfdf
foreground-alt = #fff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
color0  = #58504e
color8  = #58504e
color1  = #4D5858
color9  = #4D5858
color2  = #827572
color10 = #827572
color3  = #E0917A
color11 = #E0917A
