let mapleader=","

nnoremap <leader>\ :vsp<CR>
nnoremap <leader>- :sp<CR>

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <leader><SPACE> :nohl<CR>

map <up> <nop>
map <down> <nop>
nmap <Left> <<
vmap <Left> <gv
nmap <Right> >>
vmap <Right> >gv

nmap <leader>l :set list!<CR>
nnoremap <leader>w :set wrap!<CR>

map <C-F1> :NERDTreeToggle<CR>
nnoremap <C-F2> :MundoToggle<CR>
