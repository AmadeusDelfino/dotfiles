set -g status-interval 1

###
#
# Bar position
#
###
set-option -g status-position bottom


###
#
# Colors config
#
###
set -g status-fg colour7
set -g status-bg colour8

###
#
# Styles
#
###
set -g window-status-separator " "

###
#
# Texts in the bar
#
###
set -g status-left '#[fg=green] Earth  '
set -g status-right ''
